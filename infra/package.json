{
  "name": "@makima/infra",
  "version": "0.1.0",
  "description": "Core infrastructure utilities for the Makima toolkit.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap",
    "dev": "tsup src/index.ts --dts --format esm,cjs --sourcemap --watch",
    "test": "vitest",
    "lint": "eslint .",
    "docs": "typedoc --out docs src",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test && pnpm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justin06lee/makima.git",
    "directory": "infra"
  },
  "keywords": ["infrastructure", "typescript", "makima", "utilities"],
  "author": "justin06lee",
  "license": "MIT",
  "homepage": "https://github.com/justin06lee/makima#readme",
  "bugs": { "url": "https://github.com/justin06lee/makima/issues" },
  "publishConfig": { "access": "public" },
  "packageManager": "pnpm@10",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
